---
layout: commons
styles: blog
title: Blag
pagination:
  data: collections.post
  size: 4
  alias: posts
  generatePageOnEmptyData: true
---

<header>
  <h1>
    <a href="/blog">{{ title | default: metadata.title }}</a>
  </h1>
  <h2>{{ metadata.description }}</h2>
</header>
<main>
  <ul class="post-list">
    {% for post in pagination.items %}
      <li>
        <a href="{{post.url}}">{{ post.data.title }}</a>
        <time datetime="{{post.date | toISODateString }}">{{ post.date | toLocaleDateString }}</time>
      </li>
    {% endfor %}
  </ul>
  <ol>
    {% for pageEntry in pagination.pages %}
      <li>
        <a href="{{ pagination.hrefs[ forloop.index0 ] }}">Page {{ forloop.index }}</a>
      </li>
    {% endfor %}
  </ol>
</main>
<footer>
  <a href="/">Home</a>
</footer>